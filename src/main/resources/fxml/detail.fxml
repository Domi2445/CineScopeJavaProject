<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.filmeverwaltung.javaprojektfilmverwaltung.controller.DetailController"
      spacing="10" style="-fx-padding: 20; -fx-background-color: white;">

    <HBox spacing="10">
        <ImageView fx:id="imgPoster" fitWidth="160" fitHeight="240" preserveRatio="true"/>
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label fx:id="lblTitle" style="-fx-font-size: 18; -fx-font-weight: bold;" wrapText="true"/>
            <VBox spacing="3">
                <HBox spacing="10">
                    <Label text="Jahr:"/>
                    <Label fx:id="lblYear"/>
                </HBox>
                <HBox spacing="10" VBox.vgrow="ALWAYS">
                    <Label text="Autor:" style="-fx-padding: 0 0 0 0;"/>
                    <Label fx:id="lblWriter" wrapText="true" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>

    <Label text="Inhalt:" style="-fx-font-weight: bold;"/>
    <TextArea fx:id="txtPlot" wrapText="true" editable="false" prefRowCount="12" VBox.vgrow="ALWAYS"/>

    <Label text="Streaming-Anbieter:" style="-fx-font-weight: bold;"/>
    <HBox fx:id="streamingProvidersBox" spacing="10" alignment="CENTER_LEFT"/>

    <HBox spacing="10">
        <Button text="Schließen" onAction="#handleClose"/>
        <Button fx:id="btnWatchlist" text="Zur Watchlist hinzufügen" onAction="#handleAddToWatchList"/>
        <Button fx:id="btnTranslate" text="Auf Deutsch übersetzen" onAction="#handleTranslatePlot"/>
    </HBox>
</VBox>
