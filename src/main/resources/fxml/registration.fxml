<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="15" alignment="CENTER" style="-fx-padding: 40;"
      fx:controller="com.filmeverwaltung.javaprojektfilmverwaltung.controller.RegistrationController">

    <Label text="Benutzerregistrierung" style="-fx-font-size: 22; -fx-font-weight: bold;"/>

    <TextField fx:id="txtUsername" promptText="Benutzername (min. 3 Zeichen)"/>

    <PasswordField fx:id="txtPassword" promptText="Passwort (min. 6 Zeichen)"/>

    <PasswordField fx:id="txtPasswordConfirm" promptText="Passwort bestätigen"/>

    <Label fx:id="lblError" style="-fx-text-fill: red;" text="" visible="false"/>
    <Label fx:id="lblSuccess" style="-fx-text-fill: green;" text="" visible="false"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnRegister" text="Registrieren" onAction="#handleRegister" prefWidth="120"/>
        <Button fx:id="btnBackToLogin" text="Zurück zum Login" onAction="#backToLogin" prefWidth="120"/>
    </HBox>

</VBox>
