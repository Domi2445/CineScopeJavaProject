<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.filmeverwaltung.javaprojektfilmverwaltung.controller.RootController">

    <left>
        <VBox spacing="10" style="-fx-background-color: #2b2b2b; -fx-padding: 20;">
            <Label text="%menu.title"/>

            <Button text="%menu.search" onAction="#onSearch"/>
            <Button text="%menu.watchlist" onAction="#onWatchlist"/>
            <Button text="%menu.favorites" onAction="#onFavorites"/>
            <Button text="%menu.history" onAction="#onHistory"/>
            <Button text="%menu.settings" onAction="#onSettings"/>
            <Button fx:id="btnLoginLogout" text="%menu.login" onAction="#onLoginLogout"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea"/>
    </center>
</BorderPane>
