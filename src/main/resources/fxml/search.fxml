<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="481.0" prefWidth="574.0" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.filmeverwaltung.javaprojektfilmverwaltung.controller.SearchController">

    <HBox spacing="10">
        <TextField fx:id="txtSearch" promptText="Filmtitel eingeben..." />
        <Button onAction="#handleSearch" text="Suchen" />
    </HBox>

    <TableView fx:id="tableResults" prefHeight="400.0" prefWidth="486.0">
        <columns>
            <TableColumn fx:id="colTitle" minWidth="150.0" prefWidth="380.0" text="Titel" />
            <TableColumn fx:id="colYear" maxWidth="300.0" minWidth="80.0" prefWidth="100.0" text="Jahr" />
            <TableColumn fx:id="colWriter" maxWidth="500.0" minWidth="100.0" prefWidth="160.0" text="Autor" />
            <TableColumn fx:id="colPlot" maxWidth="1000.0" minWidth="150.0" prefWidth="220.0" text="Inhalt" />
        </columns>
    </TableView>
</VBox>

