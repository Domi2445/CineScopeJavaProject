<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="382.0" prefWidth="365.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.filmeverwaltung.javaprojektfilmverwaltung.controller.SettingsController">

    <Label layoutX="16.0" layoutY="17.0" style="-fx-font-size: 22; -fx-text-fill: white;" text="%settings.title" />

    <Label layoutX="300.0" layoutY="12.0" style="-fx-font-size: 20;" text="%settings.icon" />

    <Label layoutX="20.0" layoutY="93.0" prefHeight="20.0" prefWidth="84.0" text="%settings.language">
      <font>
         <Font size="14.0" />
      </font></Label>
    <ComboBox fx:id="cmbLanguage" layoutX="104.0" layoutY="90.0" promptText="%settings.selectLanguage" />

    <Label fx:id="lblLoading" text="%status.loading" visible="false" />

    <CheckBox fx:id="chkDarkMode" layoutX="20.0" layoutY="134.0" prefHeight="20.0" prefWidth="160.0" text="%settings.darkmode">
      <font>
         <Font size="14.0" />
      </font></CheckBox>

    <Button fx:id="btnSaveSettings" layoutX="20.0" layoutY="222.0" onAction="#handleSaveSettings" prefHeight="32.0" prefWidth="216.0" text="%settings.save" textAlignment="CENTER" textFill="#ff8400">
        <font>
            <Font size="15.0" />
        </font></Button>
</AnchorPane>
