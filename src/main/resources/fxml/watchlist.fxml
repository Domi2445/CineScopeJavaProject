<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.filmeverwaltung.javaprojektfilmverwaltung.controller.WatchlistController">

    <HBox spacing="10">
        <Label text="%watchlist.title" />
        <Region HBox.hgrow="ALWAYS" />
        <Label text="%general.size" />
        <ComboBox fx:id="cmbSize" promptText="%general.default" />
    </HBox>

    <Label fx:id="lblLoading" text="%status.loading" visible="false" />

    <TableView fx:id="tableWatchlist">
        <columns>
            <TableColumn fx:id="colTitle" minWidth="280.0" prefWidth="291.33335304260254" text="%table.title" />
            <TableColumn fx:id="colYear" minWidth="42.0" prefWidth="130.0" text="%table.year" />
            <TableColumn fx:id="colRating" minWidth="50.0" prefWidth="100.0" text="%table.rating" />
            <TableColumn fx:id="colFavorites" minWidth="25.0" prefWidth="170.0" text="%table.favorites" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button onAction="#handleDeleteSelected" text="%button.remove" />
        <Button fx:id="btnExport" text="%button.export" />
    </HBox>
</VBox>
