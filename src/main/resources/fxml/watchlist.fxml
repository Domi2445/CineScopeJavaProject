<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="529.0" prefWidth="736.0" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.filmeverwaltung.javaprojektfilmverwaltung.controller.WatchlistController">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 22;" text="Watchlist" />
        <Region HBox.hgrow="ALWAYS" />
        <Label text="Größe:" />
        <ComboBox fx:id="cmbSize" promptText="Standard" />
    </HBox>

    <TableView fx:id="tableWatchlist">
        <columns>
            <TableColumn fx:id="colTitle" minWidth="100.0" prefWidth="200.0" text="Titel" />
            <TableColumn fx:id="colYear" minWidth="60.0" prefWidth="80.0" text="Jahr" />
            <TableColumn fx:id="colRating" minWidth="80.0" prefWidth="100.0" text="Bewertung" />
            <TableColumn fx:id="colFavorites" minWidth="100.0" prefWidth="120.0" text="Favoriten" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button fx:id="btnDelete" onAction="#handleDeleteSelected" text="Entfernen" />
        <Button fx:id="btnExport" text="Exportieren" />
    </HBox>
</VBox>
