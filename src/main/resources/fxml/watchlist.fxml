<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.filmeverwaltung.javaprojektfilmverwaltung.controller.WatchlistController"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Watchlist" style="-fx-font-size: 22;" />

    <TableView fx:id="tableWatchlist">
        <columns>
            <TableColumn fx:id="colTitle" text="Titel" />
            <TableColumn fx:id="colYear" text="Jahr" />
            <TableColumn fx:id="colRating" text="Bewertung" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Entfernen" />
        <Button text="Exportieren" fx:id="btnExport" />
    </HBox>
</VBox>
