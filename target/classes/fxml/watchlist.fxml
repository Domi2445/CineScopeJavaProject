<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.filmeverwaltung.javaprojektfilmverwaltung.controller.WatchlistController">

    <Label style="-fx-font-size: 22;" text="Watchlist"/>

    <TableView fx:id="tableWatchlist">
        <columns>
            <TableColumn fx:id="colTitle" minWidth="150.0" prefWidth="380.0" text="Titel"/>
            <TableColumn fx:id="colYear" maxWidth="300.0" minWidth="80.0" prefWidth="100.0" text="Jahr"/>
            <TableColumn fx:id="colRating" maxWidth="300.0" minWidth="80.0" prefWidth="120.0" text="Bewertung"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button fx:id="btnDelete" text="Entfernen" onAction="#handleDeleteSelected"/>
        <Button fx:id="btnExport" text="Exportieren"/>
    </HBox>
</VBox>
